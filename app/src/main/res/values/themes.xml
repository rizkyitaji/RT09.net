<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SPANDUK" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cyan</item> <!--button color-->
        <item name="colorPrimaryVariant">@color/cyan</item> <!--status bar color-->
        <item name="colorOnPrimary">@color/white</item> <!--font color-->
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
    </style>

    <style name="Theme.SPANDUK.Fullscreen">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:padding">10dp</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="EditText.Snow">
        <item name="android:background">@drawable/shape_rounded_10_snow</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textColorHint">@color/blue</item>
    </style>

    <style name="EditText.White">
        <item name="android:background">@drawable/shape_rounded_10_white</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textColorHint">@color/blue</item>
    </style>

    <style name="EditText.ID">
        <item name="android:background">@drawable/shape_rounded_10_snow</item>
        <item name="android:drawableStart">@drawable/ic_person_black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:hint">Username</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="EditText.Password">
        <item name="android:background">@drawable/shape_rounded_10_snow</item>
        <item name="android:drawableStart">@drawable/ic_lock_black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:hint">Password</item>
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="EditText.Search">
        <item name="android:background">@drawable/shape_rounded_10_white</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textColorHint">@color/blue</item>
        <item name="android:hint">Search</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="TextNormal" parent="Widget.AppCompat.TextView">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextNormal.White14">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextNormal.Blue12">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextNormal.Blue14">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextNormal.Black14">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextNormal.Black18">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextBold" parent="Widget.AppCompat.TextView">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextBold.Blue14">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextBold.Blue16">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextBold.Blue18">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextBold.Blue22">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TextBold.Black18">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextBold.White16">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextBold.White18">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextBold.White22">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
    </style>
</resources>